<h1>Listing temperatures</h1>

<table>
  <thead>
    <tr>
      <th>Temperature</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Location</th>
      <th>Name</th>
      <th>Elevation</th>
      <th>Precipitation</th>
      <th>Altimiter</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @temperatures.each do |temperature| %>
      <tr>
        <td><%= temperature.temperature %></td>
        <td><%= temperature.latitude %></td>
        <td><%= temperature.longitude %></td>
        <td><%= temperature.location %></td>
        <td><%= temperature.name %></td>
        <td><%= temperature.elevation %></td>
        <td><%= temperature.precipitation %></td>
        <td><%= temperature.altimiter %></td>
        <td><%= link_to 'Show', temperature %></td>
        <td><%= link_to 'Edit', edit_temperature_path(temperature) %></td>
        <td><%= link_to 'Destroy', temperature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

